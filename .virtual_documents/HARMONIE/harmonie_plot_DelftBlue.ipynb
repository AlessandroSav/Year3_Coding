    harm3d[exp]['v_var'] = harm3d[exp]['va_p'] **2
    harm3d[exp]['w_var'] = harm3d[exp]['wa_p'] **2
    harm3d[exp]['q_var'] = harm3d[exp]['hus_p']**2
    harm3d[exp]['t_var'] = harm3d[exp]['ta_p'] **2
    
    ### Calculate TKE 
    harm3d[exp]['tke']= 0.5* (\
